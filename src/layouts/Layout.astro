---
import { t, getSwitcherData, getLocale } from "i18n:astro";
const locale = getLocale();
const data = getSwitcherData();
---
<html lang={locale}>
  <body>
    <main>
      <div>
        <a href="/">{t("home")}</a>
        <a href="/freedom">{t("freedom")}</a>
      </div>
      <slot />
      <select onchange="location = this.value;">
        {
          data.map((e) => (
            <option value={e.href} selected={e.locale === locale}>
              {e.locale}
            </option>
          ))
        }
      </select>
    </main>
  </body>
</html>

